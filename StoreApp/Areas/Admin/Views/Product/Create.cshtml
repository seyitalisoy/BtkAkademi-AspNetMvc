@model ProductDtoForInsertion
<div class="text-center">
    <div class="display-6">Create</div>
</div>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>

<div class="foem-group my-3">
    <label asp-for="CategoryId">Category</label>
    <select class="form-control" asp-for="CategoryId"
     asp-items="@ViewBag.Categories"> 
    </select>
</div>

    <div class="form-group my-3">
        <label asp-for="ProductName">Product Name</label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input name="file" type="file" class="form-control" />
    </div>

    <div class="form-group my3">
        <div class="btn btn-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Save
            </button>
            <a class="btn btn-outline-primary" asp-action="Index">
                <i class="fa fa-list"></i>
                Products
            </a>
        </div>
    </div>
</form>
